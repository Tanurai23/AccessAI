{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": false,

    "outDir": "./popup/dist",
    "rootDir": "./popup",

    "baseUrl": ".",
    "paths": {
      "@/*": ["popup/src/*"]
    }
  },
  "include": ["popup/src/**/*"],
  "exclude": ["node_modules", "popup/dist"]
}