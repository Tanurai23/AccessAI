{
  "manifest_version": 3,
  "name": "AccessAI Scanner",
  "version": "1.0",

  "permissions": ["tabs", "activeTab"],

  "action": {
    "default_popup": "popup/index.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
